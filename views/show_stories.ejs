<div class="row">
    <div class="col s12 m8">
        
        <small><%- editIcon(story.user, user, story._id, false) %></small></h3>
        <div class="card story">
            <h3 class="p-5"><%- story.title %> 
                <hr>
           <div class="card-content">
                <span class="card-title"></span>
            <%- story.body %>
            <small class="lead"><%= story.createdAt.toLocaleString() %></small>
            </div>
        </div>

    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title"><%= story.user.displayName %></span>
                <img src="<%= story.user.image %>" alt="" srcset="" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user<%= story.user._id %>">More from <%= story.user.firstName %></a>
            </div>
        </div>
    </div>
</div>