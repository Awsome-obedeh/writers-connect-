
<%- include('partials/_header.ejs') %>
<h3 class="mt-4">Edit Your Story</h3>


<div class="row">
  <div class="col-12">
     

   
    <form action="/stories/<%= story._id %>" method="POST"class="col-12">
        <input type="hidden" name="_method" value="PUT">
  
      <div class="card z-depth-3">
          <div class="card-content">
              <div class="input-field">
                  <input type="text" 
                  id="title" 
                  name="title"
                  value="<%= story.title%>"
                  >
                  <label for="title">Title</label>
              </div>
        
          <div class="input-filed">
       
              <select name="staus" id="status"   value="<%= story.staus%>">
                  <option value="public">Public</option>
                  <option value="private">Private</option>
              </select>

              <label for="status"Status></label>
          </div>
  

          <div class="input-field">
              <h5>Write Your Story:</h5>
              <textarea name="body" id="body">  <%= story.body%></textarea>
          </div>
        </div>
 
        </div>  
          </div>
      </div> <input type="submit" value="Save" class="btn light-blue mr-3 text-white">
          <a href="/dashboard" class="btn red text-white">Cancel</a>
    </form>
   
  </div>
</div>