<h1>Stories</h1>
<div class="row">
    <% if (stories.length > 0) { %>
        <% for( let i=0; i < stories.length; i++ ) { %>
            <% let story=stories[i] %>
            
            <div class=" col-lg-4 col-sm-12  m4">
                <div class="card">
                    <div class="card-image">
                       <%- editIcon(story.user, user,story._id)  %>
                        
                    </div>
                    <div class="card-content center-align p-3">
                        <h3><%= story.title  %></h3>
                           <p>  <%= replaceHtml(truncate (story.body, 150)) %></p>
                        <br>
                        <div class="chip">
                            <img src="<%= story.user.image  %>" alt="" srcset="">
                            <a href="/stories/user/<%= story.user._id %>"><%= story.user.displayName %></a>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="/stories/<%= story._id  %>" class="btn grey">Read More</a>
                    </div>
                </div>
            </div>
 
        <% } %>
    </div>

 <% } 
 else { %>
    <h3>You have no stories Created</h3>
 <% } %>
     
